{
  "debug": true,
  "server": {
    "port": 3000,
    "helmet": true,
    "parsers": true,
    "cors": {
      "origin": "*",
      "credentials": true
    },
    "session": {
      "enabled": true,
      "resave": false,
      "saveUninitialized": false,
      "secret": "mySecret"
    }
  },
  "plugins": {
    "db": {
      "enabled": true,
      "server": "mongodb://127.0.0.1/database"
    },

    "auth": {
      "enabled": true,
      "providers": ["session", "jwt"],
      "strategies": {
        "local": {

        },
        "facebook": {

        },
        "google": {

        }
      }
    },

    "logger": {
      "enabled": true,
      "path": "./storage/logs.out",
      "maxsize": 10000000,
      "zippedArchive": true,
      "maxFiles": 5
    },

    "socket": {
      "enabled": true
    },

    "mailer": {
      "enabled": true
    },

    "i18n": {
      "enabled": true
    }
  }
}